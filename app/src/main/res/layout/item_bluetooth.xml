<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/layout_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:background="@drawable/shape_ffffff"
                android:minHeight="@dimen/title_height"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin">


    <com.colin.demo.app.widget.CustomImageView
        android:id="@+id/image_item_icon"
        android:layout_width="@dimen/title_height"
        android:layout_height="@dimen/title_height"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:contentDescription="@string/action_settings"
        android:cropToPadding="false"
        android:padding="@dimen/margin"
        android:scaleType="fitCenter"
        app:image_isSquare="true"
        app:srcCompat="@drawable/ic_bluetooth"/>

    <TextView
        android:id="@+id/text_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_item_icon"
        android:layout_toEndOf="@+id/image_item_icon"
        android:layout_toRightOf="@+id/image_item_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="@dimen/line_big"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/color_212121"
        android:textSize="@dimen/text_size"/>

    <TextView
        android:id="@+id/text_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_item_icon"
        android:layout_toEndOf="@+id/image_item_icon"
        android:layout_toRightOf="@+id/image_item_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="@dimen/line_big"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_12"/>

</RelativeLayout>
