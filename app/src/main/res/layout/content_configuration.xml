<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.colin.demo.app.activity.configuration.ConfigurationActivity"
    tools:showIn="@layout/activity_configuration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            style="@style/ButtonStyle"
            android:onClick="location"
            android:text="定位"/>

        <Button
            style="@style/ButtonStyle"
            android:onClick="wifi"
            android:text="Wifi"/>
        <Button
            style="@style/ButtonStyle"
            android:onClick="phoneMessage"
            android:text="手机号码信息"/>
        <TextView
            android:id="@+id/text_configuration_detail"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:text=""/>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
