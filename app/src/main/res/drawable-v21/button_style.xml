<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/app_ripple_color">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape
                    android:shape="rectangle">

                    <solid android:color="@color/color_button_enabled_false"/>
                    <corners android:radius="@dimen/margin"/>
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape
                    android:shape="rectangle">

                    <solid android:color="@color/color_button_pressed"/>
                    <corners android:radius="@dimen/margin"/>
                </shape>
            </item>
            <item android:state_checked="true">
                <shape
                    android:shape="rectangle">
                    <solid android:color="@color/color_button_pressed"/>
                    <corners android:radius="@dimen/margin"/>
                </shape>
            </item>
            <item android:state_selected="true">
                <shape
                    android:shape="rectangle">
                    <solid android:color="@color/color_button_pressed"/>
                    <corners android:radius="@dimen/margin"/>
                </shape>
            </item>

            <item>
                <shape
                    android:shape="rectangle">
                    <solid android:color="@color/color_button"/>
                    <corners android:radius="@dimen/margin"/>
                </shape>


            </item>
        </selector>

    </item>

</ripple>