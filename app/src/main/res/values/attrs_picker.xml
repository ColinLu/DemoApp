    <color name="datepicker_divider">#cccccc</color>

    <dimen name="WheelItemTextSize">14sp</dimen>
    <dimen name="WheelSelectedItemTextSize">20sp</dimen>
    <dimen name="WheelItemSpace">12dp</dimen>
    <dimen name="WheelIndicatorSize">2dp</dimen>
    <dimen name="WheelMargins">8dp</dimen>
    <dimen name="WheelItemHeightSpace">16dp</dimen>
