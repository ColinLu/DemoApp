    <declare-styleable name="YearPicker">
        <attr name="startYear" format="integer"/>
        <attr name="endYear" format="integer"/>
    </declare-styleable>

    <declare-styleable name="MyDatePicker">
        <attr name="dateType"/>
        <attr name="selectValue"/>
        <attr name="startValue"/>
        <attr name="endValue"/>
