    <style name="DialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SwipeRefreshStyle">
        <item name="android:id" tools:ignore="AaptCrash">@+id/refresh_list</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RecyclerStyle">
        <item name="android:id" tools:ignore="AaptCrash">@+id/recycler_list</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_size</item>
    </style>


    <style name="LineHorizontalAllStyle">
        <item name="android:layout_height">@dimen/line_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/app_line_color</item>
    </style>

    <style name="LineHorizontalStyle">
        <item name="android:layout_height">@dimen/line_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/app_line_color</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>

    <style name="LineVerticalAllStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/line_small</item>
        <item name="android:background">@color/app_line_color</item>
    </style>

    <style name="LineVerticalStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/line_small</item>
        <item name="android:background">@color/app_line_color</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin</item>
        <item name="android:textColor">@color/color_212121</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:text">@string/text</item>
    </style>

    <style name="Item">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Item.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Item.Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="Item.Edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">120dip</item>
        <item name="android:layout_marginRight">100dip</item>

    </style>
</resources>
